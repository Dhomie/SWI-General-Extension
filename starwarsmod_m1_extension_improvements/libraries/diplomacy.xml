<?xml version="1.0" encoding="utf-8"?>
<diff>
  <!-- Add 1-way licence giving/removing actions -->
  <!-- Don't set them hidden by default, otherwise we'd require an MD script to reveal them -->
  <add sel="/diplomacy/actions">
    <action id="negotiate_faction_licence_exchange" category="negotiation" name="{7152025,1}" description="{7152025,2}" shortdescription="{7152025,3}" unique="false" hidden="false">
      <agent experience="15" type="negotiation" risk="none" />
      <cost influence="4" money="10000000" />
      <reward text="{7152025,4}" />
      <time duration="600" cooldown="60" />
      <icon active="diplomacy_negotiation" image="diplomacy_banner_negotiatediscount"/>
      <success chance="100" text="{7152025,5}" />
	  <params>
        <factionpair>
          <first name="faction1" text="Licence Receiver"/>
          <second name="faction2" text="Licence Giver"/>
        </factionpair>
      </params>
    </action>

    <action id="negotiate_faction_licence_removal" category="negotiation" name="{7152025,6}" description="{7152025,7}" shortdescription="{7152025,8}" unique="false" hidden="false">
      <agent experience="15" type="negotiation" risk="none" />
      <cost influence="5" money="25000000" />
      <reward text="{7152025,9}" />
      <time duration="600" cooldown="60" />
      <icon active="diplomacy_negotiation" image="diplomacy_banner_negotiatediscount"/>
      <success chance="100" text="{7152025,10}" />
	  <params>
        <factionpair>
          <first name="faction1" text="Licence Receiver"/>
          <second name="faction2" text="Licence Giver"/>
        </factionpair>
      </params>
    </action>
  </add>
</diff>
<!-- VANILLA SWI SETUP: -->
<!-- 1 salvo time: 0.7 seconds -->
<!-- 5 salvo time: (3.5 + 4) = 7.5 seconds -->
<!-- Full firing cycle with reload time: (3.5 + 4 + 35) = 42.5 seconds -->
<!-- Full firing cycle projectile count: 40 -->
<!-- 1 Projectile per second (rounded): 0.94 -->

<!-- Theoretically the projectile damage needs to be reduced by 3.75 (rounded) times for a 2 second RoF -->
<!-- 2.128x (rounded) modifier for damage, but gotta divide by 8 because of projectile increase per firing cycle -->
<!-- Multiply damage by 0.266 (rounded) -->
<diff>
	<remove sel="//macros/macro/properties/ammunition" />
	<replace sel="//macros/macro/properties/bullet">
		<bullet speed="2000" lifetime="7.15" amount="1" barrelamount="8" icon="weapon_plasma_mk1" timediff="0.015" angle="0.6" maxhits="1" ricochet="0" scale="0" attach="0" selfdestruct="1" />
	</replace>
	<replace sel="//macros/macro/properties/reload/@rate">0.5</replace>
	<!-- 480.662/94.962, rounding these -->
	<!-- Not rounding up too much, instead it gets a symbolic range increase -->
	<replace sel="//macros/macro/properties/damage">
		<damage value="480" noshield="95"/>
	</replace>
</diff>
	<remove sel="//macros/macro/properties/ammunition" />
	<replace sel="//macros/macro/properties/bullet/@lifetime">5</replace>
	<replace sel="//macros/macro/properties/bullet/@barrelamount">2</replace>
	<replace sel="//macros/macro/properties/reload/@rate">0.5</replace>
	<!-- 240/852/960, rounding these up -->
	<replace sel="//macros/macro/properties/damage">
		<damage value="240" hull="855" noshield="960"/>
	</replace>
</diff>